{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-trailing-spaces": 2,
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "node": true
  },
  "extends": "eslint:recommended"
}
